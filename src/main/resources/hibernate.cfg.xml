<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.PostgreSQL9Dialect
        </property>
        <property name="hibernate.connection.url">
            jdbc:postgresql://localhost:5432/postgres?autoReconnect=true&amp;useSSL=false
        </property>
        <property name="hibernate.connection.username">
            postgres
        </property>
        <property name="hibernate.connection.password">
            root
        </property>
        <property name="current_session_context_class">thread</property>
        <mapping class="net.greatstart.model.Contact"/>
        <mapping class="net.greatstart.model.Investment"/>
        <mapping class="net.greatstart.model.Project"/>
        <mapping class="net.greatstart.model.ProjectDescription"/>
        <mapping class="net.greatstart.model.User"/>
    </session-factory>
</hibernate-configuration>